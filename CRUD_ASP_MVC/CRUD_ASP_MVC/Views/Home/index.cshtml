@{
    ViewData["Title"] = "Home";
}

<h2>Welcome to the Home Page</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <h3>Students</h3>
            <a asp-action="Index" asp-controller="Students" class="btn btn-primary">View Students</a>
            <a asp-action="Create" asp-controller="Students" class="btn btn-success">Add Student</a>
        </div>
        <div class="col-md-4">
            <h3>Courses</h3>
            <a asp-action="Index" asp-controller="Courses" class="btn btn-primary">View Courses</a>
            <a asp-action="Create" asp-controller="Courses" class="btn btn-success">Add Course</a>
        </div>
        <div class="col-md-4">
            <h3>Enrollments</h3>
            <a asp-action="Index" asp-controller="Enrollments" class="btn btn-primary">View Enrollments</a>
            <a asp-action="Create" asp-controller="Enrollments" class="btn btn-success">Add Enrollment</a>
        </div>
    </div>
</div>
