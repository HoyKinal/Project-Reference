                @* @using (Html.BeginForm("DeleteConfirmed", "Students", new { id = item.Id }, FormMethod.Post))
                {
                     @Html.AntiForgeryToken()
                     <span>
                          <button type="submit" class="btn btn-danger">Delete</button>
                            
                     </span>
                } *@
            </td>
        </tr>
}
    </tbody>
</table>
